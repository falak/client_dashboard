<%= form_with(url: create_bulk_employees_url, method: :post) do |form| %>


  <div class="form-group">
    <div class="field">
      <%= form.label :company_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= form.collection_select :company_id, Company.all, :id, :name, {}, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :number_of_employees, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= form.text_field :number_of_employees, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Create Employees", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
